            </label>
            <div class="col-md-4">
                <div class="checkbox">
                    @Html.CheckBox("quest_15", Convert.ToBoolean(Model.quest_15), new { @class = "form-control switch", @data_on_text = "Si", @data_off_text = "No" })
                    @Html.ValidationMessageFor(model => model.quest_15, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-8">
